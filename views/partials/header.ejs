               <li class="nav-item active"><a href="/login" class="nav-link"><i class="user circle icon"></i>Login</a></li>
               <li class="nav-item active"><a href="/register" class="nav-link"><i class="user icon"></i>SignUp</a></li>
                <% }else{%>
                <li class="nav-item active mx-3"><a  class="nav-link "><i class="user icon "></i><%=currentUser.username%></a></li>
                <li class="nav-item active"><a href="/logout" class="nav-link">Logout</a></li>
                <% }%>
      
    </ul>
    
