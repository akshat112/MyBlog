<% include ./partials/header%>
<div class=" ui main text container segment">
    <div class="ui huge header">Post New Blog</div>
    <form class="ui form"action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input placeholder="Title" name="blog[title]" type="text">
        </div>
        <div class="field">
            <label>Image</label>
            <input placeholder="Image" name="blog[image]" type="text">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"></textarea>
        </div>
        
        <input class="positive ui button" type="submit">  
    </form>
</div>
<% include ./partials/footer%>